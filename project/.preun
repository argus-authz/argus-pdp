# stop the PDP
#/etc/init.d/argus-pdp stop 2>&1 /dev/null || :
/sbin/service argus-pdp stop >/dev/null 2>&1
# delete all bundled jar files
rm -f /var/lib/argus/pdp/lib/endorsed/*.jar 
rm -f /var/lib/argus/pdp/lib/*.jar
# checks that this is the actual deinstallation of the package, and remove the /etc/rc*.d links.
if [ $1 -eq 0 ] ; then
    /sbin/chkconfig --del argus-pdp
fi

