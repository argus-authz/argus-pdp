<configuration>

    <!--
        Loggers define indicate which packages/categories are logged, at which level, and to which
        appender. Levels: OFF, ERROR, WARN, INFO, DEBUG, TRACE, ALL
    -->
    <!-- Logs PDP messages -->
    <logger name="org.glite.authz">
        <level value="INFO" />
    </logger>
    
    <!-- Set this to DEBUG to get information about how a policy is evaluated. -->
    <logger name="org.herasaf">
        <level value="ERROR" />
    </logger>

    <!-- Logs fetched and evaluated policies -->
    <!-- Set level to INFO to log policies as they are refreshed from the PAP -->
    <!-- Set level to DEBUG to log the policies as they evaluated against incoming requests -->
    <logger name="org.glite.authz.message.policy">
        <level value="INFO" />
    </logger>
    
    <!-- Logs incoming and outgoing SAML messages, set level to ALL to enable -->
    <logger name="org.glite.authz.message.protocol">
        <level value="OFF" />
    </logger>

    <!-- Normally you should not edit below this point. -->

    <!-- 
        Logging appenders define where and how logging messages are logged.
     -->
    <appender name="ACCESS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${org.glite.authz.pdp.home}/logs/access.log
        </File>
        <ImmediateFlush>true</ImmediateFlush>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${org.glite.authz.pdp.home}/logs/access-%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>

        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%msg%n</Pattern>
        </layout>
    </appender>

    <appender name="AUDIT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${org.glite.authz.pdp.home}/logs/audit.log</File>
        <ImmediateFlush>true</ImmediateFlush>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${org.glite.authz.pdp.home}/logs/audit-%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>

        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%msg%n</Pattern>
        </layout>
    </appender>

    <appender name="PROCESS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${org.glite.authz.pdp.home}/logs/process.log</File>
        <!-- Uncomment this if application is terminating in such as way that the last few log messages are not written to disk -->
        <!--
        <ImmediateFlush>true</ImmediateFlush>
        -->
        
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${org.glite.authz.pdp.home}/logs/process-%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>

        <layout class="ch.qos.logback.classic.PatternLayout">
            <!-- General logging pattern, date time in UTC (Zulu) -->
            <Pattern>%date{yyyy-MM-dd HH:mm:ss.SSS'Z',UTC} - %level [%logger{0}] - %msg%n</Pattern>            
        </layout>
    </appender>
  
    <logger name="org.glite.authz.access" additivity="false">
        <level value="ALL" />
        <appender-ref ref="ACCESS" />
    </logger>
    
    <logger name="org.glite.authz.audit" additivity="false">
        <level value="ALL" />
        <appender-ref ref="AUDIT" />
    </logger>

    <root>
        <level value="ERROR" />
        <appender-ref ref="PROCESS" />
    </root>

</configuration>
